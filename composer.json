{
	"description": "A template library for Mastodon bots.",
	"homepage": "https://github.com/php-tootbot/php-tootbot",
	"license": "MIT",
	"type": "project",
	"authors": [
		{
			"name": "Contributors",
			"homepage":"https://github.com/php-tootbot/php-tootbot/graphs/contributors"
		}
	],
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": "^8.1",
		"chillerlan/php-settings-container": "^3.2",
		"php-tootbot/php-tootbot": "^1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.5",
		"phan/phan": "^5.4"
	},
	"autoload": {
		"psr-4": {
			"PHPTootBot\\MyTootBot\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"PHPTootBot\\MyTootBotTest\\": "tests"
		}
	},
	"scripts": {
		"phpunit": "@php vendor/bin/phpunit",
		"phan": "@php vendor/bin/phan"
	},
	"config": {
		"lock": true,
		"sort-packages": true,
		"platform-check": true
	}
}
